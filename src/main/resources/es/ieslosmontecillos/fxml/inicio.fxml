<View fx:id="inicio" prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.ieslosmontecillos.InicioController">
   <center>
      <VBox fx:id="vBox" alignment="CENTER" prefHeight="0.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" text="AppAgenda">
               <font>
                  <Font name="Ebrima Bold" size="24.0" />
               </font></Label>
            <ImageView fitHeight="87.0" fitWidth="83.0" onMouseClicked="#iniciaApp" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/agenda.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </VBox>
   </center>
</View>
